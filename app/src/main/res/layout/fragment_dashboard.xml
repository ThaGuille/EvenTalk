<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <TextView
        android:id="@+id/text_ubication"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="11sp"
        android:text="Lleida, 25005"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />
    <!-- app:layout_constraintBottom_toBottomOf=""
    també es pot usar un AutoCompleteTextView i posar els paraules a
    autocompletar manualment (ciuatats i events)
    -->

    <!-- T'obliguen a posar el botó dins de una
     layout i poser un paràmetre anomenat
     android:layout_alignParentRight="true" per poder posar
     un botó en una posicio...
-->


    <EditText
        android:id="@+id/text_search_events"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="3dp"
        android:layout_below="@id/text_ubication"
        android:layout_marginEnd="8dp"
        android:textSize="20sp"
        android:focusableInTouchMode="true"
        android:textIsSelectable="true"
        android:hint="buscar evento"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:editable="true"
        />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="48dp"
        android:background="@color/transparent"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:layout_alignBottom="@+id/text_search_events"
        android:layout_toEndOf="@+id/text_search_events"
        android:src="@drawable/ic_baseline_filter_alt_24"
        android:textAlignment="textEnd"
        />
    <!--android:inputType="text"-->

    <!-- Despres de 1h, onClick no funcione en Fragments. increible -->
    <LinearLayout
        android:id="@+id/layoutBaseFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/text_search_events"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/order_by_popular"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:clickable="true"
            android:focusable="true"
            android:hint="Populares"/>
        <TextView
            android:id="@+id/order_by_distance"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:clickable="true"
            android:focusable="true"
            android:hint="Cercanía"/>
        <TextView
            android:id="@+id/order_by_recommended"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textAlignment="center"
            android:clickable="true"
            android:focusable="true"
            android:hint="Recomendado"/>
    </LinearLayout>

    <!-- La linia horitzontal selectora.                                                 2hores.   JURO QUE EM VULL PEGAR UN TIRO AL PEU
          -->
    <LinearLayout
        android:id="@+id/layoutUnderline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutBaseFilters"
        android:orientation="horizontal"
        android:textSize="20sp">

        <View
            android:id="@+id/underline1"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="0dp"
            android:layout_weight="1"
            android:alpha="0.9"
            android:background="@color/blue" />

        <View
            android:id="@+id/underline2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:alpha="0.9"
            android:background="@color/gray" />

        <View
            android:id="@+id/underline3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:alpha="0.9"
            android:background="@color/gray" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/eventSpace"
        android:layout_below="@+id/layoutBaseFilters"
        android:layout_marginTop="5dp"
        android:background="@android:color/white" />
    <Space
        android:id="@+id/eventSpace"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        />

    <!-- Aquest text s'ha d'eliminar després  -->
